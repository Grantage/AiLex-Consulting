---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact AiLex Consulting - EU AI Act Compliance Consultation"
  description="Book your free EU AI Act compliance consultation. Emergency assessments, SME solutions, and fractional CAIO services. Get expert guidance today."
>
  <Header />
  
  <main>
    <!-- Contact Hero -->
    <section class="bg-gradient-to-br from-blue-50 to-green-50 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Let's Discuss Your 
            <span class="text-blue-600">AI Compliance Needs</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-700 mb-8 max-w-4xl mx-auto">
            Free consultation to understand your situation and recommend the right compliance approach
          </p>
          <div class="bg-red-100 border border-red-300 rounded-xl p-4 max-w-2xl mx-auto">
            <p class="text-red-800 font-semibold">
              ‚ö†Ô∏è GPAI Deadline: <span data-countdown>Loading...</span> Remaining
            </p>
            <p class="text-red-700 text-sm mt-1">
              Book urgent consultation for immediate compliance guidance
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Options -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            How Would You Like to Connect?
          </h2>
          <p class="text-xl text-gray-600">
            Choose the option that works best for your timeline and needs
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
          <!-- Emergency Consultation Form -->
          <div class="bg-red-50 rounded-2xl p-8 border-2 border-red-200">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-white text-2xl">üö®</span>
              </div>
              <h3 class="text-2xl font-bold text-red-600 mb-4">Emergency Consultation</h3>
              <p class="text-gray-700 mb-4">
                Urgent GPAI compliance issues requiring immediate attention.
              </p>
            </div>
            
            <form name="emergency-contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-4">
  <input type="hidden" name="form-name" value="emergency-contact" />
  <input type="hidden" name="form-type" value="emergency" />
  <input type="hidden" name="service-tier" value="Emergency Contact" />
  <input type="hidden" name="lead-source" value="Website" />
  
  <p class="hidden">
    <label>Don't fill this out: <input name="bot-field" /></label>
  </p>
  
  <div>
    <input 
      type="text" 
      name="name"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
      placeholder="Your Name"
    />
  </div>
  
  <div>
    <input 
      type="email" 
      name="email"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
      placeholder="Email Address"
    />
  </div>
  
  <div>
    <input 
      type="text" 
      name="company"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
      placeholder="Company Name"
    />
  </div>

  <div>
    <select 
      name="job-title"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
    >
      <option value="">Your Role (Optional)</option>
      <option value="CEO">CEO/Founder</option>
      <option value="Legal Counsel">Legal Counsel</option>  
      <option value="Compliance Officer">Compliance Officer</option>
      <option value="CTO">CTO/Technical Lead</option>
      <option value="Product Manager">Product Manager</option>
      <option value="Other">Other</option>
    </select>
  </div>

  <div>
    <select 
      name="urgency-level"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
    >
      <option value="">Urgency Level</option>
      <option value="immediate">Immediate (Same day response needed)</option>
      <option value="urgent">Urgent (Within 24 hours)</option>
      <option value="high">High (Within 48 hours)</option>
    </select>
  </div>
  
  <div>
    <textarea 
      name="urgency"
      required
      rows="3"
      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
      placeholder="Briefly describe your urgent compliance issue"
    ></textarea>
  </div>
  
  <button 
    type="submit"
    class="w-full bg-red-600 hover:bg-red-700 text-white py-3 rounded-lg font-semibold transition-colors"
  >
    Request Emergency Call
  </button>
</form>
</div>

          <!-- Standard Consultation Form -->
          <div class="bg-blue-50 rounded-2xl p-8 border-2 border-blue-200">
            <div class="text-center mb-6">
