---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Professional AI Governance Consultation | AiLex Consulting"
  description="Schedule professional EU AI Act compliance consultation. Expert assessment and implementation guidance from European AI governance authorities."
>
  <Header />
  
  <main>
    <!-- Professional Hero -->
    <section class="bg-gradient-to-r from-slate-50 to-blue-50 py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-serif text-slate-900 mb-6">
            Professional <span class="text-blue-800">Consultation</span>
          </h1>
          <p class="text-xl text-slate-700 max-w-4xl mx-auto mb-8">
            Systematic EU AI Act compliance consultation providing regulatory certainty through evidence-based methodology. <em class="text-blue-800">SCIENTIA ET LEX</em> — professional guidance from established AI governance authorities.
          </p>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 max-w-2xl mx-auto">
            <p class="text-red-800 font-semibold">GPAI Obligations: August 2, 2025</p>
            <p class="text-red-700 text-sm">Schedule consultation for immediate compliance assessment</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Consultation Framework -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-serif text-slate-900 mb-4">How Do I Schedule an AI Compliance Consultation?</h2>
          <p class="text-lg text-slate-600">Systematic consultation process ensuring comprehensive regulatory assessment</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Emergency Consultation -->
          <div class="bg-red-50 rounded-lg p-8 border border-red-200">
            <div class="text-center mb-6">
              <div class="w-12 h-12 bg-red-700 text-white rounded-lg flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl">⚡</span>
              </div>
              <h3 class="text-xl font-semibold text-slate-900 mb-2">Emergency Assessment</h3>
              <p class="text-slate-600 text-sm">Urgent compliance requirements necessitating immediate regulatory analysis</p>
            </div>
            
            <div class="space-y-3 mb-6 text-sm text-slate-700">
              <div>• Same-day response for urgent compliance matters</div>
              <div>• Comprehensive 6-day systematic assessment</div>
              <div>• £9,500 professional evaluation</div>
              <div>• 99.7% regulatory requirement coverage</div>
            </div>
            
            <a href="/emergency-assessment" class="block text-center bg-red-700 hover:bg-red-800 text-white py-3 rounded-lg font-semibold transition-colors">
              Request Emergency Assessment
            </a>
          </div>

          <!-- Standard Consultation -->
          <div class="bg-blue-50 rounded-lg p-8 border border-blue-200">
            <div class="text-center mb-6">
              <div class="w-12 h-12 bg-blue-800 text-white rounded-lg flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl">📋</span>
              </div>
              <h3 class="text-xl font-semibold text-slate-900 mb-2">Professional Consultation</h3>
              <p class="text-slate-600 text-sm">Structured regulatory assessment and compliance guidance session</p>
            </div>
            
            <div class="space-y-3 mb-6 text-sm text-slate-700">
              <div>• 30-minute systematic compliance review</div>
              <div>• Regulatory positioning assessment</div>
              <div>• Implementation roadmap development</div>
              <div>• Professional recommendation framework</div>
            </div>
            
            <button onclick="document.getElementById('consultation-form').scrollIntoView({behavior: 'smooth'})" class="block w-full text-center bg-blue-800 hover:bg-blue-900 text-white py-3 rounded-lg font-semibold transition-colors">
              Schedule Consultation
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Professional Consultation Form -->
    <section class="py-16 bg-slate-50" id="consultation-form">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-serif text-slate-900 mb-4">Request Professional Consultation</h2>
          <p class="text-lg text-slate-600">Complete assessment form for systematic compliance evaluation</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-8">
          <form name="professional-consultation" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-6">
            <input type="hidden" name="form-name" value="professional-consultation" />
            <input type="hidden" name="lead-source" value="Website Contact" />
            
            <p class="hidden">
              <label>Don't fill this out: <input name="bot-field" /></label>
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-semibold text-slate-700 mb-2">Full Name *</label>
                <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Your full name" />
              </div>
              <div>
                <label for="email" class="block text-sm font-semibold text-slate-700 mb-2">Business Email *</label>
                <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="your.email@company.com" />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="company" class="block text-sm font-semibold text-slate-700 mb-2">Organisation *</label>
                <input type="text" id="company" name="company" required class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Organisation name" />
              </div>
              <div>
                <label for="role" class="block text-sm font-semibold text-slate-700 mb-2">Role</label>
                <select id="role" name="role" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">Select role</option>
                  <option value="CEO">Chief Executive</option>
                  <option value="Legal Counsel">Legal Counsel</option>
                  <option value="Compliance Officer">Compliance Officer</option>
                  <option value="CTO">Technical Director</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="ai-usage" class="block text-sm font-semibold text-slate-700 mb-2">Current AI Implementation *</label>
                <select id="ai-usage" name="ai-usage" required class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">Select current status</option>
                  <option value="basic">Basic AI tools utilisation</option>
                  <option value="integrated">AI integrated systems</option>
                  <option value="custom">Custom AI development</option>
                  <option value="gpai">General Purpose AI models</option>
                  <option value="planning">Planning AI implementation</option>
                </select>
              </div>
              <div>
                <label for="urgency" class="block text-sm font-semibold text-slate-700 mb-2">Implementation Timeline *</label>
                <select id="urgency" name="urgency" required class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">Select timeline</option>
                  <option value="urgent">Urgent (within 2 weeks)</option>
                  <option value="soon">Immediate (within 1 month)</option>
                  <option value="planned">Planned (within 3 months)</option>
                  <option value="exploring">Assessment phase</option>
                </select>
              </div>
            </div>

            <div>
              <label for="service-interest" class="block text-sm font-semibold text-slate-700 mb-2">Service Requirement</label>
              <select id="service-interest" name="service-interest" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="">Select service</option>
                <option value="emergency-assessment">Emergency Assessment (£9,500)</option>
                <option value="sme-implementation">SME Implementation Programme</option>
                <option value="fractional-caio">Fractional CAIO Services</option>
                <option value="consultation-only">Professional consultation</option>
                <option value="assessment">Regulatory assessment required</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-slate-700 mb-2">Compliance Requirements</label>
              <textarea id="message" name="message" rows="3" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Describe current AI implementation, compliance concerns, or specific regulatory requirements..."></textarea>
            </div>

            <div class="bg-blue-50 rounded-lg p-4">
              <p class="text-sm text-blue-800 font-semibold mb-2">Professional Consultation Process:</p>
              <ul class="text-sm text-blue-700 space-y-1">
                <li>• Submission review within 24 hours</li>
                <li>• Personal response with initial assessment</li>
                <li>• Structured consultation scheduling</li>
                <li>• Professional compliance guidance provision</li>
              </ul>
            </div>

            <button type="submit" class="w-full bg-blue-800 hover:bg-blue-900 text-white py-4 rounded-lg font-bold text-lg transition-colors">
              Request Professional Consultation
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- FAQ for AEO -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-serif text-slate-900 mb-4">What Happens During an AI Compliance Consultation?</h2>
        </div>
        <div class="space-y-4">
          <div class="bg-slate-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-slate-900 mb-2">How long does an AI compliance consultation take?</h3>
            <p class="text-slate-700 text-sm">Professional AI compliance consultations are structured 30-minute sessions providing systematic regulatory assessment, implementation roadmap development, and compliance positioning guidance.</p>
          </div>
          <div class="bg-slate-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-slate-900 mb-2">What information do I need for a consultation?</h3>
            <p class="text-slate-700 text-sm">Consultations require details about current AI implementation, organisational structure, compliance timeline, and specific regulatory requirements to ensure comprehensive assessment.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Professional Contact -->
    <section class="py-16 bg-slate-900 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-serif mb-6">Direct Professional Contact</h2>
        <p class="text-xl text-slate-300 mb-8">Alternative consultation arrangements and urgent compliance matters</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="text-center">
            <div class="w-12 h-12 bg-blue-800 rounded-lg flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">📧</span>
            </div>
            <h3 class="text-lg font-semibold mb-2">Professional Enquiries</h3>
            <a href="mailto:consult@ailexconsulting.com" class="text-blue-300 hover:text-blue-200 font-semibold">consult@ailexconsulting.com</a>
          </div>
          <div class="text-center">
            <div class="w-12 h-12 bg-blue-800 rounded-lg flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">📍</span>
            </div>
            <h3 class="text-lg font-semibold mb-2">Location</h3>
            <p class="text-slate-300">London, United Kingdom</p>
            <p class="text-slate-400 text-sm">Remote consultations available</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Schema Markup -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "How long does an AI compliance consultation take?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Professional AI compliance consultations are structured 30-minute sessions providing systematic regulatory assessment, implementation roadmap development, and compliance positioning guidance."
        }
      },
      {
        "@type": "Question",
        "name": "What information do I need for a consultation?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Consultations require details about current AI implementation, organisational structure, compliance timeline, and specific regulatory requirements to ensure comprehensive assessment."
        }
      }
    ]
  }
  </script>

  <Footer />
</Layout>

<style>
  .font-serif { font-family: Georgia, serif; }
</style>