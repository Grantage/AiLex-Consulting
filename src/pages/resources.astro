    document.addEventListener('DOMContentLoaded', function() {
      
      // Penalty Calculator Function
      window.calculatePenaltyRisk = function() {
        const revenue = parseFloat(document.getElementById('calc-revenue').value);
        const aiUsage = document.getElementById('calc-ai-usage').value;
        
        if (revenue && revenue > 0 && aiUsage) {
          const penalty = revenue * 1000000 * 0.07;
          const assessmentCost = 9500;
          const protectionRatio = Math.round(penalty / assessmentCost);
          
          const penaltyFormatted = '¬£' + penalty.toLocaleString('en-GB', {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0
          });
          
          document.getElementById('penalty-amount-display').textContent = penaltyFormatted;
          document.getElementById('protection-ratio-display').textContent = protectionRatio + ':1';
          document.getElementById('penalty-result-display').style.display = 'block';
          
          if (typeof window.trackConversion !== 'undefined') {
            window.trackConversion('resources_penalty_calculated', {revenue: revenue, aiUsage: aiUsage});
          }
        } else {
          alert('Please enter your revenue and select your AI usage level');
        }
      };

      // Add Enter key support for penalty calculator
      const calcRevenue = document.getElementById('calc-revenue');
      const calcUsage = document.getElementById('calc-ai-usage');
      
      if (calcRevenue && calcUsage) {
        calcRevenue.addEventListener('keypress', function(e) {
          if (e.key === 'Enter' && calcUsage.value) {
            window.calculatePenaltyRisk();
          }
        });
        
        calcUsage.addEventListener('change', function() {
          if (calcRevenue.value && calcUsage.value) {
            // Auto-calculate when both fields are filled
            setTimeout(() => window.calculatePenaltyRisk(), 100);
          }
        });
      }
    });
  </script>
  
