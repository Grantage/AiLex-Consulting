---
// src/pages/services/professional-development.astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="AI Compliance Certification - Avoid €35M Penalties | AILEX" description="3-day intensive certification programme protecting your organisation from EU AI Act penalties. August 2025 deadline requires immediate action.">
  <Header />
  
  <main>
    <!-- Urgency Banner -->
    <div class="bg-red-600 text-white py-3 text-center font-semibold">
      <div class="max-w-7xl mx-auto px-4">
        ⚠️ CRITICAL: EU AI Act compliance deadline approaches - Penalties up to €35M active now
      </div>
    </div>

    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-european-blue to-innovation-indigo text-white py-20">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h1 class="text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Avoid €35M AI Act Penalties<br>Through Staff Certification
        </h1>
        <p class="text-xl mb-8 opacity-90">
          3-day intensive protecting your organisation from regulatory violations<br>
          Available September 2025 following enforcement period
        </p>
        
        <!-- Countdown Timer -->
        <div class="flex justify-center gap-8 mb-8">
          <div class="text-center p-4 bg-white bg-opacity-10 rounded-lg min-w-20">
            <span class="text-3xl font-bold block" id="days">67</span>
            <span>Days</span>
          </div>
          <div class="text-center p-4 bg-white bg-opacity-10 rounded-lg min-w-20">
            <span class="text-3xl font-bold block" id="hours">15</span>
            <span>Hours</span>
          </div>
          <div class="text-center p-4 bg-white bg-opacity-10 rounded-lg min-w-20">
            <span class="text-3xl font-bold block" id="minutes">42</span>
            <span>Minutes</span>
          </div>
        </div>
        
        <a href="#programme" class="inline-block bg-white text-european-blue px-8 py-4 rounded-lg font-semibold text-lg hover:bg-slate-50 transition-colors">
          Reserve Your Team's Certification
        </a>
      </div>
    </section>

    <!-- Problem Agitation -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl font-bold text-european-blue mb-8">Your Compliance Risk</h2>
            <p class="text-xl mb-6">
              The EU AI Act enforcement began February 2025 with immediate penalties for non-compliance. 
              Organisations face substantial financial exposure without proper staff certification.
            </p>
            
            <ul class="space-y-4">
              <li class="flex items-center">
                <span class="text-red-600 mr-3">⚠️</span>
                Article 4 literacy obligations now mandatory for all AI-using staff
              </li>
              <li class="flex items-center">
                <span class="text-red-600 mr-3">⚠️</span>
                High-risk system operators require certified competency validation
              </li>
              <li class="flex items-center">
                <span class="text-red-600 mr-3">⚠️</span>
                Documentation gaps expose organisations to regulatory intervention
              </li>
            </ul>
          </div>
          
          <div class="bg-red-50 border-2 border-red-200 rounded-xl p-8 text-center">
            <h3 class="text-red-600 text-xl font-semibold mb-4">Your Penalty Exposure</h3>
            <p class="mb-4">Based on €100M annual turnover:</p>
            <div class="text-5xl font-bold text-red-600 mb-4">€7,000,000</div>
            <p class="font-semibold mb-2">Maximum penalty for high-risk system violations</p>
            <small class="text-slate-600">€35M or 7% of global turnover for prohibited practices</small>
          </div>
        </div>
      </div>
    </section>

    <!-- Programme Section -->
    <section class="py-20 bg-parchment" id="programme">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-4xl font-bold text-european-blue text-center mb-12">
          AI Compliance Certification Intensive
        </h2>
        
        <div class="bg-white rounded-2xl p-12 shadow-2xl text-center">
          <h3 class="text-3xl font-bold text-european-blue mb-4">Complete Team Certification</h3>
          <p class="text-xl mb-8">
            Transform your staff into certified AI compliance experts whilst competitors scramble for last-minute solutions.
          </p>
          
          <div class="text-5xl font-bold text-compliance-green mb-4">£12,500</div>
          <p class="text-lg mb-8">Per cohort (up to 20 participants)</p>
          
          <div class="text-left mb-8">
            <h4 class="text-xl font-semibold text-european-blue mb-4">Programme Includes:</h4>
            <ul class="space-y-2">
              <li class="flex items-center">
                <span class="text-compliance-green mr-3">✓</span>
                3-day intensive certification course
              </li>
              <li class="flex items-center">
                <span class="text-compliance-green mr-3">✓</span>
                Individual competency assessment and validation
              </li>
              <li class="flex items-center">
                <span class="text-compliance-green mr-3">✓</span>
                Regulatory compliance documentation
              </li>
              <li class="flex items-center">
                <span class="text-compliance-green mr-3">✓</span>
                12-month certification validity with annual renewal
              </li>
              <li class="flex items-center">
                <span class="text-compliance-green mr-3">✓</span>
                Emergency consultation access
              </li>
            </ul>
          </div>
          
          <div class="bg-compliance-green text-white p-4 rounded-lg mb-8 font-semibold">
            GUARANTEE: Full certification achievement or complete refund
          </div>
          
          <a href="#contact" class="inline-block bg-european-blue text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-innovation-indigo transition-colors">
            Secure Your Team's Certification
          </a>
        </div>
      </div>
    </section>

    <!-- Social Proof -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-4xl font-bold text-european-blue text-center mb-12">Client Transformations</h2>
        
        <div class="bg-parchment p-8 rounded-xl border-l-4 border-european-blue mb-8">
          <p class="italic text-lg mb-4">
            "AILEX certification programme eliminated our compliance risk whilst enhancing team capabilities. 
            The penalty avoidance value alone justified the investment."
          </p>
          <strong>— Chief Technology Officer, European Technology Company</strong>
          <p class="text-compliance-green font-semibold mt-2">
            Result: Zero regulatory intervention, €12M penalty exposure eliminated
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8 mt-12">
          <div class="text-center p-8 bg-parchment rounded-xl">
            <div class="text-5xl font-bold text-compliance-green mb-2">100%</div>
            <p>Certification achievement rate across all participants</p>
          </div>
          <div class="text-center p-8 bg-parchment rounded-xl">
            <div class="text-5xl font-bold text-compliance-green mb-2">€47M</div>
            <p>Total penalty exposure eliminated for clients</p>
          </div>
          <div class="text-center p-8 bg-parchment rounded-xl">
            <div class="text-5xl font-bold text-compliance-green mb-2">72hrs</div>
            <p>Average time to resolve compliance gaps</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-20 bg-european-blue text-white" id="contact">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-4">Reserve Your Team's Certification</h2>
        <p class="text-xl mb-8">
          Limited monthly cohorts available from September 2025<br>
          Early registration ensures priority scheduling
        </p>
        
        <form class="max-w-lg mx-auto text-left" data-netlify="true" name="certification" method="POST">
          <input type="hidden" name="form-name" value="certification" />
          
          <div class="mb-4">
            <input type="text" name="organisation" placeholder="Organisation Name" required 
                   class="w-full p-4 border-0 rounded-lg text-slate-800 text-lg">
          </div>
          <div class="mb-4">
            <input type="email" name="email" placeholder="Email Address" required 
                   class="w-full p-4 border-0 rounded-lg text-slate-800 text-lg">
          </div>
          <div class="mb-6">
            <select name="teamSize" required class="w-full p-4 border-0 rounded-lg text-slate-800 text-lg">
              <option value="">Team Size Requiring Certification</option>
              <option value="1-10">1-10 people</option>
              <option value="11-20">11-20 people</option>
              <option value="21-50">21-50 people</option>
              <option value="50+">50+ people (multiple cohorts)</option>
            </select>
          </div>
          <button type="submit" class="w-full bg-white text-european-blue p-4 rounded-lg font-semibold text-lg hover:bg-slate-50 transition-colors">
            Reserve Certification Programme
          </button>
        </form>
        
        <p class="mt-8 opacity-80">48-hour response guaranteed | Emergency consultation available</p>
      </div>
    </section>
  </main>

  <Footer />

  <script>
    // Countdown timer to August 2, 2025
    function updateCountdown() {
      const targetDate = new Date('2025-08-02T00:00:00Z');
      const now = new Date();
      const difference = targetDate - now;
      
      if (difference > 0) {
        const days = Math.floor(difference / (1000 * 60 * 60 * 24));
        const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
        
        document.getElementById('days').textContent = days;
        document.getElementById('hours').textContent = hours;
        document.getElementById('minutes').textContent = minutes;
      } else {
        document.querySelector('.countdown').innerHTML = '<div class="text-center p-4 bg-white bg-opacity-10 rounded-lg"><span class="text-2xl font-bold">DEADLINE PASSED</span></div>';
      }
    }
    
    updateCountdown();
    setInterval(updateCountdown, 60000);
    
    // Form submission handling
    document.querySelector('form').addEventListener('submit', function(e) {
      const submitBtn = this.querySelector('button[type="submit"]');
      submitBtn.textContent = 'Submitting...';
      submitBtn.disabled = true;
    });
  </script>
</Layout>