    document.addEventListener('DOMContentLoaded', function() {
      const calculateButton = document.getElementById('risk-calculate-button');
      const revenueInput = document.getElementById('risk-revenue-input');
      
      if (calculateButton && revenueInput) {
        calculateButton.addEventListener('click', function() {
          const revenue = parseFloat(revenueInput.value);
          
          if (revenue && revenue > 0) {
            // Calculate 7% penalty
            const penalty = revenue * 1000000 * 0.07;
            const assessmentCost = 9500;
            const protectionRatio = Math.round(penalty / assessmentCost);
            
            // Format penalty as currency
            const penaltyFormatted = '¬£' + penalty.toLocaleString('en-GB', {
              minimumFractionDigits: 0,
              maximumFractionDigits: 0
            });
            
            // Show result
            document.getElementById('risk-penalty-amount').textContent = penaltyFormatted;
            document.getElementById('risk-protection-ratio').textContent = protectionRatio + ':1';
            document.getElementById('risk-penalty-result').style.display = 'block';
            
            // Track the calculation
            if (typeof window.trackConversion !== 'undefined') {
              window.trackConversion('emergency_penalty_calculated', {revenue: revenue, ratio: protectionRatio});
            }
          } else {
            alert('Please enter a valid revenue amount (e.g., 10 for ¬£10M)');
          }
        });
        
        // Allow Enter key to calculate
        revenueInput.addEventListener('keypress', function(e) {
          if (e.key === 'Enter') {
            calculateButton.click();
          }
        });
      }
    });
