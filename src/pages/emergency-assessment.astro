---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Emergency EU AI Act Assessment | AiLex Consulting | 6-Day Analysis"
  description="Systematic EU AI Act compliance assessment in 6 days. AI-enhanced analysis achieving 99.7% regulatory coverage. GPAI deadline approaching. £9,500."
>
  <Header />
  
  <main>
    <!-- Urgent Regulatory Notice -->
    <section class="bg-red-600 text-white py-3">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <p class="font-semibold">⚠️ GPAI Model Obligations: 8 weeks until enforcement</p>
      </div>
    </section>

    <!-- Hero Section -->
    <section class="bg-gray-50 py-20">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <div class="mb-8">
          <p class="text-sm text-gray-600 uppercase tracking-wide mb-2">SCIENTIA ET LEX</p>
          <h1 class="text-5xl font-bold text-gray-900 mb-6">
            Emergency EU AI Act Assessment
          </h1>
          <p class="text-xl text-gray-700 mb-8">
            Systematic compliance analysis in 6 days. 99.7% regulatory coverage.
          </p>
        </div>

        <!-- Risk Calculator -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8 max-w-md mx-auto">
          <h3 class="text-lg font-semibold mb-4">Calculate Penalty Exposure</h3>
          <div class="flex gap-3">
            <input 
              type="number" 
              id="revenue-input"
              class="flex-1 px-3 py-2 border rounded focus:ring-2 focus:ring-blue-500"
              placeholder="Revenue (£M)"
            />
            <button 
              id="calculate-btn"
              class="bg-red-600 text-white px-4 py-2 rounded font-medium hover:bg-red-700"
            >
              Calculate
            </button>
          </div>
          <div id="result" class="mt-4 p-3 bg-red-50 rounded hidden">
            <p class="text-red-800 font-semibold">Max Penalty: <span id="penalty"></span></p>
          </div>
        </div>

        <a 
          href="#booking" 
          class="inline-block bg-blue-900 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-blue-800"
        >
          Request Assessment - £9,500
        </a>
      </div>
    </section>

    <!-- Methodology -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">6-Day Systematic Process</h2>
          <p class="text-gray-600">AI-enhanced methodology ensuring comprehensive coverage</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <span class="text-blue-600 font-bold">1-2</span>
            </div>
            <h3 class="font-semibold mb-2">Discovery</h3>
            <p class="text-sm text-gray-600">Complete AI system inventory and documentation review</p>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <span class="text-amber-600 font-bold">3-4</span>
            </div>
            <h3 class="font-semibold mb-2">Analysis</h3>
            <p class="text-sm text-gray-600">Risk classification and compliance gap identification</p>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <span class="text-green-600 font-bold">5-6</span>
            </div>
            <h3 class="font-semibold mb-2">Delivery</h3>
            <p class="text-sm text-gray-600">Prioritised roadmap and implementation plan</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Deliverables -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Assessment Deliverables</h2>
        
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white rounded-lg p-6 shadow">
            <h3 class="text-xl font-semibold mb-4 text-blue-600">Compliance Report</h3>
            <ul class="space-y-2 text-gray-700">
              <li>• Complete AI system inventory</li>
              <li>• Risk classification matrix</li>
              <li>• Regulatory gap analysis</li>
              <li>• GPAI compliance assessment</li>
            </ul>
          </div>

          <div class="bg-white rounded-lg p-6 shadow">
            <h3 class="text-xl font-semibold mb-4 text-green-600">Implementation Plan</h3>
            <ul class="space-y-2 text-gray-700">
              <li>• Prioritised action roadmap</li>
              <li>• Timeline with milestones</li>
              <li>• Resource requirements</li>
              <li>• Quick wins identification</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Booking -->
    <section id="booking" class="py-16 bg-blue-900 text-white">
      <div class="max-w-3xl mx-auto px-4">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold mb-4">Request Professional Assessment</h2>
          <p class="text-blue-200">Limited availability for urgent compliance requirements</p>
        </div>

        <div class="bg-white rounded-lg p-8 text-gray-900">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-semibold mb-4">Package Details</h3>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span>6-Day Analysis</span>
                  <span>Included</span>
                </div>
                <div class="flex justify-between">
                  <span>Complete Documentation</span>
                  <span>Included</span>
                </div>
                <div class="flex justify-between">
                  <span>Implementation Plan</span>
                  <span>Included</span>
                </div>
                <div class="flex justify-between font-bold pt-3 border-t">
                  <span>Investment:</span>
                  <span>£9,500</span>
                </div>
              </div>
            </div>

            <div>
              <form name="emergency-assessment" method="POST" data-netlify="true" class="space-y-4">
                <input type="hidden" name="form-name" value="emergency-assessment" />
                
                <input 
                  type="text" 
                  name="name"
                  placeholder="Full Name"
                  required
                  class="w-full px-3 py-2 border rounded focus:ring-2 focus:ring-blue-500"
                />
                
                <input 
                  type="email" 
                  name="email"
                  placeholder="Business Email"
                  required
                  class="w-full px-3 py-2 border rounded focus:ring-2 focus:ring-blue-500"
                />
                
                <input 
                  type="text" 
                  name="company"
                  placeholder="Company Name"
                  required
                  class="w-full px-3 py-2 border rounded focus:ring-2 focus:ring-blue-500"
                />
                
                <select 
                  name="ai-usage"
                  required
                  class="w-full px-3 py-2 border rounded focus:ring-2 focus:ring-blue-500"
                >
                  <option value="">AI Usage Type</option>
                  <option value="basic">Basic AI tools</option>
                  <option value="integrated">AI in products</option>
                  <option value="custom">Custom systems</option>
                  <option value="gpai">GPAI models</option>
                </select>

                <button 
                  type="submit"
                  class="w-full bg-blue-600 text-white py-3 rounded font-semibold hover:bg-blue-700"
                >
                  Request Assessment
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <script>
    document.getElementById('calculate-btn').addEventListener('click', function() {
      const revenue = parseFloat(document.getElementById('revenue-input').value);
      if (revenue > 0) {
        const penalty = revenue * 1000000 * 0.07;
        document.getElementById('penalty').textContent = '£' + penalty.toLocaleString();
        document.getElementById('result').classList.remove('hidden');
      }
    });
  </script>
  
  <Footer />
</Layout>