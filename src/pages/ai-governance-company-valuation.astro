      const aiMaturitySelect = document.getElementById('ai-maturity-select');
      const resultsDiv = document.getElementById('valuation-results');

      if (calculateButton && marketCapInput && sectorSelect && aiMaturitySelect) {
        calculateButton.addEventListener('click', function() {
          const marketCap = parseFloat(marketCapInput.value);
          const sector = sectorSelect.value;
          const aiMaturity = aiMaturitySelect.value;
          
          if (!marketCap || !sector || !aiMaturity) {
            alert('Please fill in all fields to calculate valuation impact');
            return;
          }

          // Calculate premium based on sector and maturity
          let basePremium = 0;
          
          // Sector-specific premiums
          switch(sector) {
            case 'financial':
              basePremium = 18.5;
              break;
            case 'healthcare':
              basePremium = 22.3;
              break;
            case 'technology':
              basePremium = 25.7;
              break;
            case 'manufacturing':
              basePremium = 16.2;
              break;
            case 'retail':
              basePremium = 14.8;
              break;
            case 'energy':
              basePremium = 19.1;
              break;
            default:
              basePremium = 17.5;
          }

          // Adjust for AI maturity
          let maturityMultiplier = 1.0;
          switch(aiMaturity) {
            case 'basic':
              maturityMultiplier = 0.6;
              break;
            case 'integrated':
              maturityMultiplier = 0.8;
              break;
            case 'advanced':
              maturityMultiplier = 1.0;
              break;
            case 'leading':
              maturityMultiplier = 1.2;
              break;
          }

          const finalPremium = basePremium * maturityMultiplier;
          const valueIncrease = marketCap * (finalPremium / 100);
          const investmentCost = 60000; // Average of ¬£45k-¬£75k
          const roi = Math.round(valueIncrease / investmentCost);

          // Update display
          document.getElementById('current-cap').textContent = '¬£' + marketCap.toLocaleString() + 'M';
          document.getElementById('premium-percentage').textContent = finalPremium.toFixed(1) + '%';
          document.getElementById('value-increase').textContent = '¬£' + valueIncrease.toLocaleString('en-GB', {maximumFractionDigits: 1}) + 'M';
          document.getElementById('roi-ratio').textContent = roi + ':1';

          resultsDiv.style.display = 'block';

          // Track calculation
          if (typeof window.trackConversion !== 'undefined') {
            window.trackConversion('valuation_calculator_used', {
              marketCap: marketCap,
              sector: sector,
              aiMaturity: aiMaturity,
              estimatedIncrease: valueIncrease,
              roi: roi
            });
          }

          // Scroll to results
          resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
      }
    });
