          const revenue = parseFloat(revenueInput.value);
          const aiUsage = aiUsageSelect.value;
          
          if (revenue && revenue > 0 && aiUsage) {
            // Calculate penalty risk
            const penaltyRisk = revenue * 1000000 * 0.07;
            
            // Calculate implementation cost based on AI usage complexity
            let implementationCost;
            switch(aiUsage) {
              case 'basic':
                implementationCost = 15000;
                break;
              case 'integrated':
                implementationCost = 20000;
                break;
              case 'custom':
                implementationCost = 25000;
                break;
              case 'gpai':
                implementationCost = 30000;
                break;
              default:
                implementationCost = 15000;
            }
            
            const assessmentCost = 9500;
            const totalCost = assessmentCost + implementationCost;
            const protectionRatio = Math.round(penaltyRisk / totalCost);
            
            // Format amounts
            const penaltyFormatted = '¬£' + penaltyRisk.toLocaleString('en-GB', {
              minimumFractionDigits: 0,
              maximumFractionDigits: 0
            });
            
            const implementationFormatted = '¬£' + implementationCost.toLocaleString('en-GB');
            const totalFormatted = '¬£' + totalCost.toLocaleString('en-GB');
            
            // Update display
            document.getElementById('sme-penalty-risk').textContent = penaltyFormatted;
            document.getElementById('sme-implementation-cost').textContent = implementationFormatted;
            document.getElementById('sme-total-cost').textContent = totalFormatted;
            document.getElementById('sme-protection-ratio').textContent = protectionRatio + ':1';
            document.getElementById('sme-results').style.display = 'block';
            
            // Track calculation
            if (typeof window.trackConversion !== 'undefined') {
              window.trackConversion('sme_calculator_used', {
                revenue: revenue,
                aiUsage: aiUsage,
                totalCost: totalCost,
                ratio: protectionRatio
              });
            }
          } else {
            alert('Please enter your revenue and select your AI usage situation');
          }
        });
      }
    });
