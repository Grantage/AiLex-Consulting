<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .services-overview {
    padding: 80px 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: #1e3a8a;
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.2rem;
    color: #525252;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
  }

  .service-card {
    background: #fefcf3;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 40px 30px;
    text-align: center;
    transition: all 0.3s;
  }

  .service-card.featured {
    border-color: #4f46e5;
    transform: scale(1.05);
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 20px;
  }

  .service-card h3 {
    font-size: 1.5rem;
    color: #1e3a8a;
    margin-bottom: 10px;
  }

  .service-price {
    font-size: 2rem;
    font-weight: 600;
    color: #4f46e5;
    margin-bottom: 20px;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 20px 0;
  }

  .service-features li {
    padding: 5px 0;
    color: #525252;
  }

  .service-features li:before {
    content: "‚úì ";
    color: #047857;
    font-weight: bold;
  }

  .service-cta {
    display: inline-block;
    background: #1e3a8a;
    color: white;
    padding: 12px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    margin-top: 20px;
    transition: background 0.3s;
  }

  .service-cta:hover {
    background: #1e40af;
  }

  .target-market {
    padding: 80px 0;
    background: linear-gradient(135deg, #fefcf3 0%, rgba(30, 58, 138, 0.03) 100%);
  }

  .market-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .market-text h2 {
    font-size: 2.2rem;
    color: #1e3a8a;
    margin-bottom: 20px;
  }

  .market-text > p {
    font-size: 1.1rem;
    color: #525252;
    margin-bottom: 30px;
  }

  .market-sectors {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .sector h4 {
    color: #1e3a8a;
    margin-bottom: 10px;
  }

  .sector p {
    color: #525252;
    font-size: 0.9rem;
  }

  .market-stats {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .stat-card {
    background: white;
    padding: 30px;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: #4f46e5;
  }

  .stat-label {
    color: #525252;
    font-size: 0.9rem;
    margin-top: 5px;
  }

  .competitive-advantage {
    padding: 80px 0;
    background: white;
  }

  .competitive-advantage h2 {
    text-align: center;
    font-size: 2.5rem;
    color: #1e3a8a;
    margin-bottom: 50px;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .comparison-item {
    background: #fefcf3;
    padding: 30px;
    border-radius: 12px;
    border: 2px solid #e5e7eb;
  }

  .comparison-item h4 {
    color: #1e3a8a;
    margin-bottom: 15px;
    text-align: center;
  }

  .comparison-row {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .ailex {
    background: #047857;
    color: white;
    padding: 10px;
    border-radius: 6px;
    font-weight: 500;
  }

  .competitor {
    background: #dc2626;
    color: white;
    padding: 10px;
    border-radius: 6px;
    font-weight: 500;
  }

  .cta-section {
    padding: 80px 0;
    background: #1e3a8a;
    color: white;
  }

  .cta-content {
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 40px;
    opacity: 0.9;
  }

  .cta-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
  }

  .btn-primary-large {
    background: #4f46e5;
    color: white;
    padding: 18px 36px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: background 0.3s;
  }

  .btn-primary-large:hover {
    background: #4338ca;
  }

  .btn-secondary-large {
    background: transparent;
    color: white;
    padding: 18px 36px;
    border: 2px solid white;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s;
  }

  .btn-secondary-large:hover {
    background: white;
    color: #1e3a8a;
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .market-content {
      grid-template-columns: 1fr;
    }

    .market-sectors {
      grid-template-columns: 1fr;
    }

    .comparison-grid {
      grid-template-columns: 1fr;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>