    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-european-blue to-innovation-indigo">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-8">
