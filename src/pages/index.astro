  <script>
  // Defer calculator setup to improve FID
  setTimeout(function() {
    const calculateButton = document.getElementById('calculate-button');
    const revenueInput = document.getElementById('revenue-input');
    
    if (calculateButton && revenueInput) {
      calculateButton.addEventListener('click', function() {
        const revenue = parseFloat(revenueInput.value);
        
        if (revenue && revenue > 0) {
          const penalty = revenue * 1000000 * 0.07;
          const penaltyFormatted = 'Â£' + penalty.toLocaleString('en-GB', {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0
          });
          
          document.getElementById('penalty-amount').textContent = penaltyFormatted;
          document.getElementById('penalty-result').style.display = 'block';
          
          if (typeof window.trackConversion !== 'undefined') {
            window.trackConversion('penalty_calculated', {revenue: revenue});
          }
        } else {
          alert('Please enter a valid revenue amount (e.g., 10 for Â£10M)');
        }
      });
      
      revenueInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          calculateButton.click();
        }
      });
    }
  }, 100);
</script>
  
