                  <div class="mt-2 bg-slate-200 rounded-full h-2">
                    <div class="bg-red-500 h-2 rounded-full" style="width: 23%"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Overview -->
      <div class="bg-gradient-to-br from-white via-warm-white to-parchment/50 rounded-xl shadow-lg border border-slate-200/60 p-8 hover:shadow-xl hover:border-european-blue/20 transition-all duration-300 backdrop-blur-sm">>
