---
// No props needed for now - we'll add dynamic features later
---

<header class="bg-blue-900 text-white shadow-lg sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo and Brand -->
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center">
          <span class="text-blue-900 font-bold text-xl">A</span>
        </div>
        <div>
          <h1 class="text-xl font-bold">AiLex Consulting</h1>
          <p class="text-blue-200 text-xs">AI-Enhanced Compliance Analysis</p>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="/emergency-assessment" class="text-white hover:text-blue-200 font-medium transition-colors">
          Emergency Assessment
        </a>
        <a href="/sme-compliance" class="text-white hover:text-blue-200 font-medium transition-colors">
          SME Solutions
        </a>
        <a href="/methodology" class="text-white hover:text-blue-200 font-medium transition-colors">
          Methodology
        </a>
        <a href="/resources" class="text-white hover:text-blue-200 font-medium transition-colors">
          Resources
        </a>
        <a href="/about" class="text-white hover:text-blue-200 font-medium transition-colors">
          About
        </a>
      </nav>

      <!-- Primary CTA Button -->
      <div class="hidden md:block">
        <a 
          href="/emergency-assessment" 
          class="bg-amber-500 hover:bg-amber-600 text-blue-900 px-6 py-3 rounded-lg font-semibold transition-colors shadow-lg"
          onclick="trackConversion('cta_click', {location: 'header'})"
        >
          Get Assessment - £9,500
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden text-white p-2"
        onclick="toggleMobileMenu()"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="flex flex-col space-y-3">
        <a href="/emergency-assessment" class="text-white hover:text-blue-200 font-medium py-2">
          Emergency Assessment
        </a>
        <a href="/sme-compliance" class="text-white hover:text-blue-200 font-medium py-2">
          SME Solutions
        </a>
        <a href="/methodology" class="text-white hover:text-blue-200 font-medium py-2">
          Methodology
        </a>
        <a href="/resources" class="text-white hover:text-blue-200 font-medium py-2">
          Resources
        </a>
        <a href="/about" class="text-white hover:text-blue-200 font-medium py-2">
          About
        </a>
        <a 
          href="/emergency-assessment" 
          class="bg-amber-500 hover:bg-amber-600 text-blue-900 px-4 py-3 rounded-lg font-semibold text-center mt-4"
        >
          Get Assessment - £9,500
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    window.toggleMobileMenu = function() {
      const menu = document.getElementById('mobile-menu');
      if (menu) {
        menu.classList.toggle('hidden');
      }
    }
  });
</script>