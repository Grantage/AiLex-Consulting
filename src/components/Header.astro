---

<header class="bg-parchment border-b border-slate-200 sticky top-0 z-50 backdrop-blur-md bg-parchment/95">
  <!-- Professional Credentials Bar -->
  <div class="bg-platinum border-b border-slate-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-2 text-center">
        <div class="text-xs text-institutional-grey">
          <span>Regulatory Affairs Specialist</span>
          <span class="mx-2">•</span>
          <span>European AI Governance Expert</span>
          <span class="mx-2">•</span>
          <span>PE Portfolio Advisory</span>
          <span class="mx-2">•</span>
          <span>Multi-Jurisdictional Compliance</span>
        </div>
      </div>
    </div>
  </div>

  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Enhanced Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-10 h-10 bg-gradient-to-br from-innovation-indigo to-european-blue rounded-lg flex items-center justify-center relative">
            <span class="text-white font-bold text-sm">A</span>
            <div class="absolute inset-0 rounded-lg border border-european-blue/20"></div>
          </div>
          <div class="ailex-logo text-xl">
            <span class="text-innovation-indigo">AI</span><span class="text-slate-300">LEX</span>
          </div>
        </a>
      </div>

      <!-- Professional Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/strategic-governance" class="text-advisory-grey hover:text-european-blue transition-colors font-medium">Strategic Governance</a>
          <a href="/portfolio-advisory" class="text-advisory-grey hover:text-european-blue transition-colors font-medium">Portfolio Advisory</a>
          <a href="/regulatory-mastery" class="text-advisory-grey hover:text-european-blue transition-colors font-medium">Regulatory Mastery</a>
          <a href="/about" class="text-advisory-grey hover:text-european-blue transition-colors font-medium">About</a>
          <a href="/contact" class="bg-european-blue text-white px-4 py-2 rounded-lg hover:bg-innovation-indigo transition-colors font-medium">Strategic Review</a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-advisory-grey hover:text-european-blue">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-parchment border-t border-slate-100">
        <a href="/strategic-governance" class="block px-3 py-2 text-advisory-grey hover:text-european-blue">Strategic Governance</a>
        <a href="/portfolio-advisory" class="block px-3 py-2 text-advisory-grey hover:text-european-blue">Portfolio Advisory</a>
        <a href="/regulatory-mastery" class="block px-3 py-2 text-advisory-grey hover:text-european-blue">Regulatory Mastery</a>
        <a href="/about" class="block px-3 py-2 text-advisory-grey hover:text-european-blue">About</a>
        <a href="/contact" class="block px-3 py-2 text-advisory-grey hover:text-european-blue">Strategic Review</a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    button?.addEventListener('click', function() {
      menu?.classList.toggle('hidden');
    });
  });
</script>