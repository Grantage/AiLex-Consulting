---
// src/layouts/Layout.astro
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "AiLex Consulting - UK AI Act Compliance & AI Governance for Financial Services" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  
  <!-- Schema Markup for AEO -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ProfessionalService",
    "name": "AiLex Consulting",
    "description": "AI Governance & EU AI Act Compliance Specialists for Financial Services",
    "url": "https://ailexconsulting.com",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "GB",
      "addressRegion": "England",
      "addressLocality": "London"
    },
    "serviceType": [
      "AI Governance Consulting",
      "EU AI Act Compliance",
      "Emergency AI Assessment",
      "AI Risk Management",
      "Financial Services AI Governance"
    ],
    "areaServed": [
      "United Kingdom",
      "European Union"
    ],
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "AI Governance Services",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Emergency AI Act Assessment",
            "description": "6-day comprehensive AI compliance diagnostic"
          },
          "price": "15000",
          "priceCurrency": "GBP"
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Rapid Compliance Implementation",
            "description": "6-week systematic AI governance framework"
          },
          "price": "45000",
          "priceCurrency": "GBP"
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Fractional Chief AI Officer",
            "description": "Ongoing AI governance oversight"
          },
          "price": "8000",
          "priceCurrency": "GBP"
        }
      ]
    }
  }
  </script>
</head>
<body>
  <slot />
</body>
</html>