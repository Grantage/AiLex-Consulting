---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Systematic AI governance for European growth companies. Regulatory mastery combined with commercial insight, ensuring EU AI Act compliance accelerates competitive positioning." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en-GB" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- SEO Meta Tags -->
    <meta name="keywords" content="AI governance, EU AI Act, regulatory affairs, PE portfolio companies, systematic compliance" />
    <meta name="author" content="AILEX Consulting Ltd" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ailexconsulting.com" />
    
    <!-- European Standards -->
    <meta name="accessibility" content="EN 301 549 compliant" />
    
    <!-- Professional Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
      :root {
        --european-blue: #1e3a8a;
        --innovation-indigo: #4f46e5;
        --compliance-green: #047857;
        --advisory-grey: #525252;
        --institutional-grey: #64748b;
        --success-green: #16a34a;
        --parchment: #fefcf3;
        --platinum: #f8fafc;
      }
      
      .ailex-logo {
        font-family: 'Inter', system-ui, sans-serif;
        font-weight: 500;
        letter-spacing: 0.15em;
      }
      
      .ai-element {
        color: var(--innovation-indigo);
      }
      
      .lex-element {
        color: var(--european-blue);
      }

      .professional-typography {
        font-family: 'Inter', system-ui, sans-serif;
        line-height: 1.7;
        letter-spacing: 0.01em;
      }

      /* Ensure proper page structure */
      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
      }
    </style>
  </head>
  <body class="font-inter text-advisory-grey bg-parchment professional-typography">
    <Header />
    
    <main>
      <slot />
    </main>
    
    <Footer />
    
    <!-- Form Enhancement -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const forms = document.querySelectorAll('form[data-netlify]');
        forms.forEach(form => {
          form.addEventListener('submit', function(e) {
            const submitBtn = form.querySelector('button[type="submit"]');
            if (submitBtn) {
              submitBtn.textContent = 'Processing request...';
              submitBtn.disabled = true;
            }
          });
        });
      });
    </script>
  </body>
</html>